def all_record():
    query="select * from student"
    cur.execute(query)
    print("RECORDS:")
    for i in cur:
        print(i)
    print()
    header()
  
  
def exi_prog():
    print("------------------------------")
    print("******************************")
    print("ARE YOU SURE YOU WANT TO EXIT?")
    choice=input("ENTER CHOICE (Y/N):")
    print("******************************")
    print("------------------------------")
    if choice=="Y" or choice=="y":
        exit()
    elif choice=="N" or choice=="n":
        header()
    else:
        print("---------------")
        print("***************")
        print("INCORRECT INPUT")
        print("***************")
        print("---------------")
        print()
        
        
header()
