def add_record():
    global cur
    print("---------------")
    print("***************")
    print("ADD RECORD MENU")
    print("***************")
    print("---------------")
    print()
    roll_no=input("ENTER ROLL NUMBER:")
    try:
        roll_no=int(roll_no)
        print()
    except Exception:
        print("-----------------")
        print("*****************")
        print("INCORRECT ROLL NO")
        print("*****************")
        print("-----------------")
        print()
        add_record()
    name=input("ENTER NAME:")
    print()
    marks=input("ENTER MARKS (OUT OF 100):")
    try:
        marks=int(marks)
        marks<=100
    except Exception:
        print("---------------")
        print("***************")
        print("INCORRECT MARKS")
        print("***************")
        print("---------------")
        print()
        add_record()
    try:
        query="insert into student values(%s,'%s',%s)"%(roll_no,name,marks)
        cur.execute(query)
        con.commit()
        print("------------")
        print("************")
        print("DATA ENTERED")
        print("************")
        print("------------")
        print()
        header()
    except Exception as e:
        print("-----")
        print("*****")
        print("ERROR")
        print("*****")
        print("-----")
        print()
        print("ERROR:",e)
        print()
        add_record()



